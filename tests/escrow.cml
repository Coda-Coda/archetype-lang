model escrow

role buyer

role[%transferable] debitor = buyer

role seller

role[%transferable] creditor = seller

role oracle

variable[%traceable] price tez from buyer to creditor

variable[%traceable] [%mutable_signed [buyer, debitor] (instate Created)]
     penalty tez from seller to debitor = 0.1 * price

(* transaction deadline *)
variable[%mutable (buyer or seller) (instate Created)] date deadline

(* state machine *)
states =
 | Created initial
 | Aborted
 | Confirmed
 | Canceled
 | Transferred

transaction abort = {
  called by buyer or seller
  transition from Created to Aborted
}

transaction[%signedbyall [buyer, seller]] confirm = {
  transition from Created to Confirmed
  condition balance = price + penalty
}

transaction transfer_ = {
  called by oracle
  transition from Confirmed to Transferred
  condition now < deadline
  action
    transfer price;
    transfer back penalty
}

transaction cancel = {
  called by oracle
  transition from Confirmed to Canceled
  action
    transfer penalty;
    transfer back price
}

specification {
  state = Transferred -> balance = 0
}
