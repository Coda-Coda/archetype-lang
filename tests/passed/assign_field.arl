archetype assign_field

asset myasset identified by id {
  id : int;
  str : string;
} initialized by {
  {0; ""}
}

action exec () {
  specification {
    s0: let some v = myasset.get(0) in v.str = "mystr" otherwise false;
  }
  effect {
    myasset[0].str := "mystr";
    require (myasset[0].str = "mystr")
  }
}
