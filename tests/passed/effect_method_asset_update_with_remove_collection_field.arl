archetype effect_method_asset_update_with_remove_collection_field

asset my_asset_simple identified by str {
  str : string
}

asset my_asset identified by id {
  id : string;
  value : int;
  mycollection : my_asset_simple collection;
} initialized by {
  { "my_id"; 0; [] }
}

action exec () {
  effect {
    my_asset.update ("my_id", {value = 4; mycollection -= ["str1"; "str2"; "str3"] })
    (*
