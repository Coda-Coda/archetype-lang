archetype expr_formula_asset_method_max

asset my_asset identified by id {
  id : string;
  value : int;
} initialized by {
  {"id0"; 0};
  {"id1"; 1};
  {"id2"; 2}
}

action exec () {

  specification {
    s: let some a = my_asset.optmax(the.value) in a = 0 otherwise false;
  }

  effect {
    require (true)
  }
}
