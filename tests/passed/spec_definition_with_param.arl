archetype spec_definition_with_param

asset myasset {
  id: int;
  v : nat;
}

entry exec (p : nat) {
 specification {

    definition mydef {
      x : myasset | x.v = p
    }
    postcondition p1 {
      mydef.isempty()
    }
    postcondition p2 {
      mydef.count() = 0
    }
    postcondition p3 {
      let some a = mydef[0] in
      a.id = 0
      otherwise true
    }

  }

  effect {
    ()
  }
}
