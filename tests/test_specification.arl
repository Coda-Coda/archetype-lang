archetype test_specification

asset myasset {
  id: string;
  val: bool;
}

action tr {
  specification {
    effect {
      let a = myasset.get("id") in
      a.val := true
    }
    postcondition s1 {
      forall x in myasset, x.val
    }
    postcondition s2 {
      exists x in myasset, x.val
    }
  }

  effect {
      var i : int = 10;
      i := 1
    }
}
