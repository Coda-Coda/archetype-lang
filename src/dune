(env
  (dev
    (flags (:standard -rectypes -g -w Y -w Z -w -9 -w -23 -w +28 -w +33 -w -32)))
  (release
    (flags (:standard -rectypes))))

(ocamllex lexer)
(menhir (flags --explain) (modules parser))


(library
  (name cmlLib)
  (preprocess
    (pps ppx_deriving.std ppx_deriving_yojson)
  )
  (library_flags (-linkall))
  (modules tools core ident location parseUtils parseTree parser lexer io model modelinfo modelws modelliq printer translate liq_printer)
  (libraries menhirLib why3 ppx_deriving yojson ppx_deriving_yojson.runtime)
)

(library
  (name w3plugin)
  (modules w3plugin)
  (libraries cmlLib)
)

(rule
 (targets cml.cmxs)
 (deps    cmlLib.cmxa w3plugin.cmxa)
 (action  (run ocamlopt -shared -linkall -o %{targets}
            %{lib:easy-format:easy_format.cmxa}
            %{lib:biniou:biniou.cmxa}
            %{lib:yojson:yojson.cmxa}
            %{lib:result:result.cmxa}
            %{lib:ppx_deriving:ppx_deriving_runtime.cmxa}
            %{lib:ppx_deriving_yojson:runtime/ppx_deriving_yojson_runtime.cmxa}
            %{deps} )))

(executable
  (modules extract compiler)
  (libraries cmlLib menhirLib why3)
  (name     compiler))
