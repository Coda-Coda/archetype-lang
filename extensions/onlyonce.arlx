archetype extension onlyonce (

  action[%onlyonce%] tr

) = {

  action tr = {
    verification {
      variable call_count int = 0
      effect {
        label step;
        call_count += 1
      }
      specification o1 = {
        none
        invariants for step {
          requires -> call_count = 0;
          call_count <= 1
        }
      }
    }
  }
}
