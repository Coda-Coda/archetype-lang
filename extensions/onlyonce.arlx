archetype extension onlyonce (

  action[%onlyonce] tr

) = {

  action tr = {
    verification {
      variable call_count int = 0
      effect
        call_count += 1
      invariant loop
        i1 : conditions -> call_count = 0;
        i2 : call_count <= 1
      specification
        none
      }
   }

}
