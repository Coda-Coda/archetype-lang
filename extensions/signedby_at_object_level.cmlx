archetype extension signedby (
  variable arole role

  object[%signedby arole] anObject aType

  action aTransaction (obj : anObject)

) = {

  key key_<%arole> of oracle

  action aTransaction (signed_<%obj>: signature) = {
    condition
      c1 : check_signature obj signed_<%obj> key_<%arole>
  }
}
