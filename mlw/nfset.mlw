(* Normalized Finite Set
   with 'strong' normalisation (ie. normalisation makes it unique) -------- *)
theory NFSet

(* ------------------------------------------------------------------------ *)
use list.List
use fset.Undup

(* ------------------------------------------------------------------------ *)
type t

(* ------------------------------------------------------------------------ *)
val function eqt t t : bool

(* ------------------------------------------------------------------------ *)
val function norm (xs : list t) : list t

(* ------------------------------------------------------------------------ *)
axiom normI : forall xs ys. permut (undup xs) (undup ys) -> norm xs = norm ys

(* ------------------------------------------------------------------------ *)
clone export fset.FSet with type t = t,
                       val eqt = eqt,
                       val norm = norm,
                       axiom .

end