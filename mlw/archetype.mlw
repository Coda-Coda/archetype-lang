  (* String *)
  use string.String as S

  val function str_concat string string : string

  axiom str_concat_spec : forall s1 s2.
  str_concat s1 s2 = S.concat s1 s2

  val function substring string int : string

  axiom substring_spec : forall s i.
  substring s i = S.substring s 0 i

  val function str_length string : int

